<div class="row">
  <% jobs.each do |job| %>
    <div class="col xs12 x6 m4 l3" id="job-snippet">
      <div class="card medium">
        <div class="card-image">
          <!-- <%#= link_to( image_tag(task.image.url(:medium), alt: "Task Image"), task_path(task) ) %> -->
          <%= image_tag(job.company.logo) %>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= link_to job.title, company_job_path(job.company, job) %><i class="material-icons right">more_vert</i></span>
          <p><%= job.company.name %></p>
          <p><%= job.city.name_and_state %></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">Job Details<i class="mfaterial-icons right">close</i></span>
          <p><%= job.title %></p>
          <span class="job-snippet-details">
            Looking for someone with about <%= job.years_of_experience %> year(s) of experience, with a starting salary of <%= job.salary %>
          </span>
          <p><%= job.description %></p>
        </div>
        <div class="card-action">
          <%= link_to "View opportunity details", company_job_path(job.company, job) %>
        </div>
      </div>
    </div>
  <% end %>
</div>
